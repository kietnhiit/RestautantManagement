@model IEnumerable<DAL.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Area.Area1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prices)
                (VND)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExportPrice)
            (VND)
        </th>
        <th></th>
    </tr>
    @{
        int temp = 0;
    }
@foreach (var item in Model) {
    temp++;
    <tr>
        <td>
            @temp
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area.Area1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unit)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prices)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExportPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Update", new { id=item.ProductID })
        </td>
    </tr>
}

</table>
